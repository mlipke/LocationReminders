<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:padding="16dp">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/circle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/circle_24dp"
        android:tint="@color/colorPrimary"/>

    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:id="@+id/type"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_list_24dp"
        android:tint="@color/white"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Schein abholen"
        android:id="@+id/title"
        android:layout_alignTop="@+id/circle"
        android:layout_toEndOf="@+id/circle"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/normalText"
        android:maxLines="1"
        android:ellipsize="end"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/locationIcon"
        android:layout_below="@+id/title"
        android:layout_alignStart="@+id/title"
        android:src="@drawable/ic_location_on_24dp"
        android:layout_marginTop="4dp"
        android:tint="@color/lightGray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="NÃ¶thnitzer Str."
        android:id="@+id/locationString"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@+id/locationIcon"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp" />

</RelativeLayout>